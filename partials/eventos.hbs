<section class="events">
  <!-- Imagen estática arriba de la sección -->
  <div class="events__image">
    <img src="/imagenes/eventos/portada_eventos.jpg" alt="Imagen de eventos" class="events__image-img">
  </div>

  <h2 class="events__title">Próximos Eventos</h2>
  <div class="events__container">
    {{#each events}} <!-- Itera sobre los eventos -->
      <div class="event">
        <!-- Imagen específica de cada evento -->
        <div class="event__image">
          <img src="{{this.image}}" alt="{{this.title}}" class="event__image-img">
        </div>
        
        <h3 class="event__title">{{this.title}}</h3> <!-- Título del evento -->
        <p class="event__date">{{this.date}}</p> <!-- Fecha del evento -->
        <p class="event__description">{{this.description}}</p> <!-- Descripción del evento -->
      </div>
    {{/each}}
  </div>
</section>
