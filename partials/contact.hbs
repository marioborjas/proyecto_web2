<section class="contact">
  <div class="contact-container">
    <div class="carousel">
      <div class="carousel-images">
        {{#each images}}
          <img src="{{this.src}}" alt="{{this.alt}}" class="carousel-image">
        {{/each}}
      </div>
      <button class="carousel-btn prev">&lt;</button>
      <button class="carousel-btn next">&gt;</button>
    </div>
    
    <div class="contact-form-container">
      <h1>{{title}}</h1>
      <p>{{description}}</p>
      <form action="/send-message" method="POST" class="contact-form">
        <label for="name">{{nameLabel}}</label>
        <input type="text" id="name" name="name" placeholder="{{namePlaceholder}}" required>
        
        <label for="email">{{emailLabel}}</label>
        <input type="email" id="email" name="email" placeholder="{{emailPlaceholder}}" required>
        
        <label for="message">{{messageLabel}}</label>
        <textarea id="message" name="message" placeholder="{{messagePlaceholder}}" required></textarea>
        
        <button type="submit">{{submitText}}</button>
      </form>
    </div>
  </div>
</section>
