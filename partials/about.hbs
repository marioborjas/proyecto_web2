<!-- about.hbs -->
<section class="about">
  <div class="about-header">
    <h1>{{title}}</h1>
    <p>{{description}}</p>
  </div>

  <div class="about-content">
    <div class="about-section">
      <h2>{{historyTitle}}</h2>
      <p>{{historyText}}</p>
    </div>

    <div class="about-section">
      <h2>{{productsTitle}}</h2>
      <p>{{productsText}}</p>
      <ul>
        {{#each products}}
          <li><strong>{{name}}:</strong> {{description}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="about-section">
      <h2>{{communityTitle}}</h2>
      <p>{{communityText}}</p>
    </div>

    <div class="about-section">
      <h2>{{innovationTitle}}</h2>
      <p>{{innovationText}}</p>
    </div>

    <div class="about-section team">
      <h2>{{teamTitle}}</h2>
      <div class="team-grid">
        {{#each teamMembers}}
          <div class="team-member">
            <img src="{{imageSrc}}" alt="Miembro del equipo">
            <h3>{{name}}</h3>
            <p>Puesto: {{position}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>


